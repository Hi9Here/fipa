{
    "entrypoint": "index.html",
    "shell": "src/my-app.html",
    "fragments": [
        "src/my-home.html",
        "src/my-energy.html",
        "src/my-funding.html",
        "src/my-telecoms.html",
        "src/my-chipandpin.html",
        "src/my-virtual.html",
        "src/my-epos.html",
        "src/my-aboutus.html",
        "src/my-contactus.html",
        "src/my-view404.html"
    ],
    "sources": [
        "src/**/*",
        "images/**/*"
    ],
    "extraDependencies": [
        "manifest.json",
        "bower_components/webcomponentsjs/*.js"
    ],
    "lint": {
        "rules": ["polymer-2"]
    },
    "builds": [{
            "preset": "es5-bundled"
        },
        {
            "preset": "es6-bundled"
        },
        {
            "preset": "es6-unbundled"
        }
    ]
}